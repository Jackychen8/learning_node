extends layout

block content
  h1= title
  p Welcome to our test

  // Wrapper
  #wrapper
    // USER INFO
    #userInfo
        h2 User Info
        p
            strong Name:
            |    <span id='userInfoName'></span>
            br
            strong Age:
            |    <span id='userInfoAge'></span>
            br
            strong Gender:
            |    <span id='userInfoGender'></span>
            br
            strong Location:
            |    <span id='userInfoLocation'></span>
            br
            strong Picture:
            |    <div id='userInfoImage'></div>
    // /USER INFO

    // USER LIST
    h2 User List
    #userList
        table
            thead
                th UserName
                th Email
                th Delete?
            tbody
    // /User List

    // ADD USER
    h2 Add User
    #addUser
        form(method='post',enctype='multipart/form-data' action='/users/adduser')
            fieldset
                //fieldset
                input#inputUserName(type='text', placeholder='Username')
                input#inputUserEmail(type='text', placeholder='Email')
                br
                input#inputUserFullname(type='text', placeholder='Full Name')
                input#inputUserAge(type='text', placeholder='Age')
                br
                input#inputUserLocation(type='text', placeholder='Location')
                input#inputUserGender(type='text', placeholder='Gender')
                br
                input#inputUserImage(type='file', name='upl')
                br
                //button#btnAddUser Add User
                input#btnAddUser(type='submit' value="Upload File")
    // /ADD USER
    
    // /Wrapper